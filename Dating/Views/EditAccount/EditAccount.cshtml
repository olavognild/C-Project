@model Dating.Models.editwrapper
@{
    ViewBag.Title = "Edit account";
}


<h1>@User.Identity.Name</h1>
<h2>@ViewBag.Title</h2>


@Html.AntiForgeryToken()
<h4>Enter new information to update your account</h4>
<hr />

@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.mailen.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.mailen.Email, new { @class = "form-control" })
        </div>
        <div class="col-md-2">
            <input type="submit" class="btn btn-default" value="Update" />
        </div>
    </div>
}

@using (Html.BeginForm("About", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
        <div class="col-md-2">
            <input type="submit" class="btn btn-default" value="Update" />
        </div>
    </div>
}

@using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.About, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.TextAreaFor(m => m.About, new { @class = "form-control stork" })
        </div>
        <div class="col-md-2">
            <input type="submit" class="btn btn-default" value="Update" />
        </div>

    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
